@model List<TMS.UI.Models.TaskViewModel>
@{
    ViewData["Title"] = "My Tasks";
}

<style>
    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }
    .stats-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: transform 0.3s;
    }
    .stats-card:hover {
        transform: translateY(-5px);
    }
    .stats-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    .add-task-section {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
    .task-input {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s;
    }
    .task-input:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    .btn-add-task {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        transition: transform 0.2s;
    }
    .btn-add-task:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }
    .tasks-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }
    .task-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.3s;
        border-left: 5px solid #667eea;
        position: relative;
        animation: slideIn 0.3s ease-out;
    }
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .task-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }
    .task-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 1rem;
        word-break: break-word;
    }
    .task-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }
    .btn-edit {
        background: #28a745;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.9rem;
        transition: all 0.3s;
    }
    .btn-edit:hover {
        background: #218838;
        transform: scale(1.05);
    }
    .btn-delete {
        background: #dc3545;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.9rem;
        transition: all 0.3s;
    }
    .btn-delete:hover {
        background: #c82333;
        transform: scale(1.05);
    }
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
    .empty-state i {
        font-size: 5rem;
        color: #ccc;
        margin-bottom: 1rem;
    }
    .search-box {
        position: relative;
        margin-bottom: 2rem;
    }
    .search-box input {
        width: 100%;
        padding: 12px 15px 12px 45px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
    }
    .search-box i {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
    }
    .loading-spinner {
        display: none;
        text-align: center;
        padding: 2rem;
    }
    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }
    .task-id {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #f0f0f0;
        padding: 3px 10px;
        border-radius: 10px;
        font-size: 0.75rem;
        color: #666;
    }
</style>

<div class="container-fluid px-4">
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2"><i class="bi bi-check2-square"></i> My Task Dashboard</h1>
                <p class="mb-0">Manage your tasks efficiently and stay organized</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="d-flex justify-content-end gap-3">
                    <div class="stats-card" style="display: inline-block; background: rgba(255,255,255,0.2); color: white;">
                        <h3 class="mb-0" id="taskCount">@Model.Count</h3>
                        <small>Total Tasks</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="add-task-section">
        <h5 class="mb-3"><i class="bi bi-plus-circle"></i> Quick Add Task</h5>
        <div class="row">
            <div class="col-md-9">
                <input type="text" id="newTaskTitle" class="form-control task-input" placeholder="Enter task title..." />
                <div id="taskTitleError" class="text-danger small mt-1" style="display: none;"></div>
            </div>
            <div class="col-md-3">
                <button onclick="addTask()" class="btn btn-add-task w-100">
                    <i class="bi bi-plus-lg"></i> Add Task
                </button>
            </div>
        </div>
    </div>

    <div class="search-box">
        <i class="bi bi-search"></i>
        <input type="text" id="searchInput" class="form-control" placeholder="Search tasks..." onkeyup="filterTasks()" />
    </div>

    <div class="loading-spinner" id="loadingSpinner">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading tasks...</p>
    </div>

    <div id="tasksContainer" class="tasks-container">
        @if (Model.Count == 0)
        {
            <div class="empty-state col-12">
                <i class="bi bi-clipboard-x"></i>
                <h3>No Tasks Yet</h3>
                <p class="text-muted">Start by adding your first task above!</p>
            </div>
        }
        else
        {
            @foreach (var task in Model)
            {
                <div class="task-card" data-task-id="@task.Id">
                    <span class="task-id">#@task.Id</span>
                    <div class="task-title" id="taskTitle_@task.Id">@task.Title</div>
                    <div class="task-edit" id="taskEdit_@task.Id" style="display: none;">
                        <input type="text" class="form-control task-input mb-2" id="editInput_@task.Id" value="@task.Title" />
                        <div class="d-flex gap-2">
                            <button onclick="saveTask(@task.Id)" class="btn btn-success btn-sm">
                                <i class="bi bi-check-lg"></i> Save
                            </button>
                            <button onclick="cancelEdit(@task.Id)" class="btn btn-secondary btn-sm">
                                <i class="bi bi-x-lg"></i> Cancel
                            </button>
                        </div>
                    </div>
                    <div class="task-actions" id="taskActions_@task.Id">
                        <button onclick="editTask(@task.Id)" class="btn btn-edit flex-fill">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        <button onclick="deleteTask(@task.Id)" class="btn btn-delete flex-fill">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        function showLoading() {
            $('#loadingSpinner').show();
        }

        function hideLoading() {
            $('#loadingSpinner').hide();
        }

        function showToast(message, isSuccess = true) {
            const toastHtml = `
                <div class="toast show" role="alert" style="position: fixed; top: 80px; right: 20px; z-index: 9999;">
                    <div class="toast-header ${isSuccess ? 'bg-success' : 'bg-danger'} text-white">
                        <i class="bi ${isSuccess ? 'bi-check-circle-fill' : 'bi-exclamation-triangle-fill'} me-2"></i>
                        <strong class="me-auto">${isSuccess ? 'Success' : 'Error'}</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;
            $('body').append(toastHtml);
            setTimeout(() => $('.toast').last().remove(), 5000);
        }

        function updateTaskCount() {
            const count = $('.task-card').length;
            $('#taskCount').text(count);
        }

        async function addTask() {
            const title = $('#newTaskTitle').val().trim();

            if (title.length < 3) {
                $('#taskTitleError').text('Title must be at least 3 characters').show();
                return;
            }

            $('#taskTitleError').hide();
            showLoading();

            try {
                const response = await fetch('@Url.Action("Create", "Tasks")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ title: title })
                });

                const result = await response.json();

                if (result.success) {
                    const taskHtml = `
                        <div class="task-card" data-task-id="${result.data.id}">
                            <span class="task-id">#${result.data.id}</span>
                            <div class="task-title" id="taskTitle_${result.data.id}">${result.data.title}</div>
                            <div class="task-edit" id="taskEdit_${result.data.id}" style="display: none;">
                                <input type="text" class="form-control task-input mb-2" id="editInput_${result.data.id}" value="${result.data.title}" />
                                <div class="d-flex gap-2">
                                    <button onclick="saveTask(${result.data.id})" class="btn btn-success btn-sm">
                                        <i class="bi bi-check-lg"></i> Save
                                    </button>
                                    <button onclick="cancelEdit(${result.data.id})" class="btn btn-secondary btn-sm">
                                        <i class="bi bi-x-lg"></i> Cancel
                                    </button>
                                </div>
                            </div>
                            <div class="task-actions" id="taskActions_${result.data.id}">
                                <button onclick="editTask(${result.data.id})" class="btn btn-edit flex-fill">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button onclick="deleteTask(${result.data.id})" class="btn btn-delete flex-fill">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    `;

                    $('.empty-state').remove();
                    $('#tasksContainer').prepend(taskHtml);
                    $('#newTaskTitle').val('');
                    updateTaskCount();
                    showToast('Task added successfully!');
                } else {
                    showToast(result.message || 'Failed to add task', false);
                }
            } catch (error) {
                showToast('An error occurred while adding the task', false);
                console.error(error);
            } finally {
                hideLoading();
            }
        }

        function editTask(id) {
            $(`#taskTitle_${id}`).hide();
            $(`#taskActions_${id}`).hide();
            $(`#taskEdit_${id}`).show();
            $(`#editInput_${id}`).focus();
        }

        function cancelEdit(id) {
            $(`#taskTitle_${id}`).show();
            $(`#taskActions_${id}`).show();
            $(`#taskEdit_${id}`).hide();
        }

        async function saveTask(id) {
            const title = $(`#editInput_${id}`).val().trim();

            if (title.length < 3) {
                showToast('Title must be at least 3 characters', false);
                return;
            }

            showLoading();

            try {
                const response = await fetch('@Url.Action("Update", "Tasks")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: id, title: title })
                });

                const result = await response.json();

                if (result.success) {
                    $(`#taskTitle_${id}`).text(result.data.title);
                    cancelEdit(id);
                    showToast('Task updated successfully!');
                } else {
                    showToast(result.message || 'Failed to update task', false);
                }
            } catch (error) {
                showToast('An error occurred while updating the task', false);
                console.error(error);
            } finally {
                hideLoading();
            }
        }

        async function deleteTask(id) {
            if (!confirm('Are you sure you want to delete this task?')) {
                return;
            }

            showLoading();

            try {
                const response = await fetch('@Url.Action("Delete", "Tasks")?id=' + id, {
                    method: 'POST'
                });

                const result = await response.json();

                if (result.success) {
                    $(`.task-card[data-task-id="${id}"]`).fadeOut(300, function() {
                        $(this).remove();
                        updateTaskCount();

                        if ($('.task-card').length === 0) {
                            const emptyHtml = `
                                <div class="empty-state col-12">
                                    <i class="bi bi-clipboard-x"></i>
                                    <h3>No Tasks Yet</h3>
                                    <p class="text-muted">Start by adding your first task above!</p>
                                </div>
                            `;
                            $('#tasksContainer').html(emptyHtml);
                        }
                    });
                    showToast('Task deleted successfully!');
                } else {
                    showToast(result.message || 'Failed to delete task', false);
                }
            } catch (error) {
                showToast('An error occurred while deleting the task', false);
                console.error(error);
            } finally {
                hideLoading();
            }
        }

        function filterTasks() {
            const searchTerm = $('#searchInput').val().toLowerCase();

            $('.task-card').each(function() {
                const taskTitle = $(this).find('.task-title').text().toLowerCase();
                if (taskTitle.includes(searchTerm)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        }

        // Allow adding task with Enter key
        $('#newTaskTitle').keypress(function(e) {
            if (e.which === 13) {
                addTask();
            }
        });

        // Allow saving edited task with Enter key
        $(document).on('keypress', '[id^="editInput_"]', function(e) {
            if (e.which === 13) {
                const id = $(this).attr('id').split('_')[1];
                saveTask(id);
            }
        });
    </script>
}

